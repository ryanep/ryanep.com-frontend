{
  "extends": ["walmart/configurations/es6", "prettier"],
  "env": {
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "root": true,
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["babel", "react", "jest"],
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "eol-last": 0,
    "no-invalid-this": 0,
    "babel/no-invalid-this": 1,
    "max-len": ["error", 120],
    "quotes": ["error", "single", "avoid-escape"],
    "max-statements": [
      "error",
      30,
      {
        "ignoreTopLevelFunctions": true
      }
    ]
  }
}

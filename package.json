{
  "name": "ryanep.com-frontend",
  "description": "",
  "version": "1.0.0",
  "author": "Ryan Elliott-Potter <ryan@ryanep.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryanep/ryanep.com-frontend.git"
  },
  "scripts": {
    "build": "rm -rf ./dist && webpack --config ./config/webpack.config.prod.js",
    "start": "NODE_ENV=production && node ./dist/server/",
    "dev": "webpack-dev-server ./src/client --hot --inline --config ./config/webpack.config.dev.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint 'src/**/*.scss'",
    "lint:js": "eslint 'src/**/*.js'",
    "fmt:css": "stylefmt -r 'src/**/*.scss'",
    "fmt:js": "prettier --write --single-quote './src/**/*.js'",
    "fmt": "npm run fmt:css && npm run fmt:js",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "babel-polyfill": "6.26.0",
    "compression": "1.7.1",
    "ejs": "2.5.7",
    "express": "4.15.5",
    "express-force-https": "1.0.0",
    "express-minify-html": "0.11.4",
    "isomorphic-fetch": "2.2.1",
    "prop-types": "15.6.0",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "react-helmet": "5.2.0",
    "react-lazyload": "2.2.7",
    "react-markdown": "2.5.0",
    "react-redux": "5.0.6",
    "react-router": "4.2.0",
    "react-router-dom": "4.2.2",
    "react-svg-inline": "2.0.0",
    "redux": "3.7.2",
    "redux-saga": "0.15.6"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-eslint": "8.0.1",
    "babel-jest": "21.2.0",
    "babel-loader": "7.1.2",
    "babel-plugin-transform-async-to-generator": "6.24.1",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.6.0",
    "babel-preset-react": "6.24.1",
    "copy-webpack-plugin": "^4.1.1",
    "css-loader": "0.28.7",
    "dotenv-webpack": "1.5.4",
    "enzyme": "3.0.0",
    "enzyme-adapter-react-16": "^1.0.0",
    "eslint": "4.7.2",
    "eslint-config-prettier": "2.6.0",
    "eslint-config-walmart": "1.2.4",
    "eslint-plugin-babel": "4.1.2",
    "eslint-plugin-filenames": "1.2.0",
    "eslint-plugin-jest": "21.2.0",
    "eslint-plugin-react": "7.4.0",
    "extract-text-webpack-plugin": "3.0.0",
    "file-loader": "0.11.2",
    "husky": "0.14.3",
    "identity-obj-proxy": "3.0.0",
    "ignore-styles": "5.0.1",
    "jest": "21.2.0",
    "lint-staged": "4.2.3",
    "node-sass": "4.5.3",
    "nodemon": "1.12.1",
    "prettier": "1.7.0",
    "raw-loader": "0.5.1",
    "react-hot-loader": "3.0.0-beta.7",
    "react-test-renderer": "16.0.0",
    "redux-mock-store": "1.3.0",
    "sass-loader": "6.0.6",
    "sass-resources-loader": "1.3.1",
    "source-map-support": "0.4.18",
    "style-loader": "0.18.2",
    "stylefmt": "6.0.0",
    "stylelint": "8.1.1",
    "stylelint-config-standard": "17.0.0",
    "uglifyjs-webpack-plugin": "0.4.6",
    "url-loader": "0.5.9",
    "webpack": "3.6.0",
    "webpack-dev-server": "2.8.2"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "setupFiles": [
      "./config/jest/"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "^@actions(.*)$": "<rootDir>/src/app/actions$1",
      "^@adapters(.*)$": "<rootDir>/src/app/adapters$1",
      "^@components(.*)$": "<rootDir>/src/app/components$1",
      "^@constants(.*)$": "<rootDir>/src/app/constants$1",
      "^@containers(.*)$": "<rootDir>/src/app/containers$1",
      "^@helpers(.*)$": "<rootDir>/src/app/helpers$1",
      "^@models(.*)$": "<rootDir>/src/app/models$1",
      "^@reducers(.*)$": "<rootDir>/src/app/reducers$1",
      "^@sagas(.*)$": "<rootDir>/src/app/sagas$1",
      "^@services(.*)$": "<rootDir>/src/app/services$1",
      "^@store(.*)$": "<rootDir>/src/app/store$1"
    },
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote",
      "eslint",
      "git add"
    ],
    "*.scss": [
      "stylefmt -r",
      "git add"
    ]
  }
}

{
  "name": "ryanep.com-frontend",
  "description": "",
  "version": "1.0.0",
  "author": "Ryan Elliott-Potter <ryan@ryanep.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryanep/ryanep.com-frontend.git"
  },
  "scripts": {
    "build": "rm -rf ./dist && webpack --config ./config/webpack.config.prod.js",
    "start": "NODE_ENV=production && node ./dist/server/",
    "dev": "webpack-dev-server ./src/client --hot --inline --config ./config/webpack.config.dev.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint 'src/**/*.scss'",
    "lint:js": "eslint 'src/**/*.js'",
    "fmt:css": "stylefmt -r 'src/**/*.scss'",
    "fmt:js": "prettier --write --single-quote './src/**/*.js'",
    "fmt": "npm run fmt:css && npm run fmt:js",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "compression": "^1.6.2",
    "ejs": "^2.5.6",
    "express": "^4.15.2",
    "express-force-https": "^1.0.0",
    "express-minify-html": "^0.10.0",
    "isomorphic-fetch": "^2.2.1",
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-helmet": "^5.1.3",
    "react-lazyload": "^2.2.7",
    "react-markdown": "^2.5.0",
    "react-redux": "^5.0.4",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "react-svg-inline": "^2.0.0",
    "redux": "^3.6.0",
    "redux-saga": "^0.14.6"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-node-env-inline": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.12",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-minimal": "^2.1.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.25.0",
    "enzyme": "^2.9.1",
    "eslint": "^3.19.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-config-walmart": "^1.2.4",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-filenames": "^1.2.0",
    "eslint-plugin-jest": "^21.0.2",
    "eslint-plugin-react": "^7.1.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "husky": "^0.13.4",
    "identity-obj-proxy": "^3.0.0",
    "ignore-styles": "^5.0.1",
    "jest": "^19.0.2",
    "lint-staged": "^4.0.2",
    "node-sass": "^3.13.1",
    "nodemon": "^1.11.0",
    "prettier": "^1.5.2",
    "raw-loader": "^0.5.1",
    "react-hot-loader": "^1.3.1",
    "react-test-renderer": "^15.6.1",
    "redux-mock-store": "^1.2.3",
    "sass-loader": "^4.1.1",
    "sass-resources-loader": "^1.2.1",
    "source-map-support": "^0.4.14",
    "style-loader": "^0.13.2",
    "stylefmt": "^6.0.0",
    "stylelint": "^7.11.1",
    "stylelint-config-standard": "^16.0.0",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "url-loader": "^0.5.8",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.5.0"
  },
  "standard": {
    "env": ["jest"]
  },
  "jest": {
    "setupFiles": ["./config/jest/"],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "^@actions(.*)$": "<rootDir>/src/app/actions$1",
      "^@adapters(.*)$": "<rootDir>/src/app/adapters$1",
      "^@components(.*)$": "<rootDir>/src/app/components$1",
      "^@constants(.*)$": "<rootDir>/src/app/constants$1",
      "^@containers(.*)$": "<rootDir>/src/app/containers$1",
      "^@helpers(.*)$": "<rootDir>/src/app/helpers$1",
      "^@models(.*)$": "<rootDir>/src/app/models$1",
      "^@reducers(.*)$": "<rootDir>/src/app/reducers$1",
      "^@sagas(.*)$": "<rootDir>/src/app/sagas$1",
      "^@services(.*)$": "<rootDir>/src/app/services$1",
      "^@store(.*)$": "<rootDir>/src/app/store$1"
    },
    "collectCoverageFrom": ["src/**/*.js"]
  },
  "lint-staged": {
    "*.js": ["prettier --write --single-quote", "eslint", "git add"],
    "*.scss": ["stylefmt -r", "git add"]
  }
}

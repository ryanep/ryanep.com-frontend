{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "target": "es2017",
    "jsx": "react"
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
